{
    "name": "oslwc",
    "description": "Run Time LWC",
    "version": "0.0.1",
    "bugs": "https://github.com/vyuvalv/lightning-out/issues",
    "dependencies": {
        "@lwc/synthetic-shadow": "^1.17.6",
        "@salesforce-ux/design-system": "^2.14.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-graphql": "^0.12.0",
        "graphql": "^16.6.0",
        "helmet": "^3.23.3",
        "lightning-base-components": "^1.11.5-alpha"
    },
    "devDependencies": {
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "husky": "^4.3.8",
        "jsforce": "^1.10.1",
        "lint-staged": "^10.5.4",
        "lwc-services": "^2.3.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/vyuvalv/lightning-out.git",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src/server/**/*.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node ./src/server/main.js"
    },
    "repository": "lightning-out-web",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/client/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon",
        "watch": "run-p watch:client watch:server"
    }
}
